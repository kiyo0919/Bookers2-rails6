<h1>User info</h1>
<%= @user.name %>
<%= @user.introduction %>

<h1>New book</h1>
<%= form_with model:@book_new, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_area :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<h1>Users</h1>
<% @users.each do |user| %>
  <%= user.name %>
<% end %>
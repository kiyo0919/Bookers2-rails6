<h1>User info</h1>
<%= form_with model: @user, local:true do |f| %>

<p>Name</p>
  <%= f.text_area :name %>

<p>Image</p>
  <%= f.file_field :profile_image,  accept: "image/*" %>

<p>Introduction</p>
  <%= f.text_area :introduction %>
  <%= f.submit "Update User" %>
<% end %>
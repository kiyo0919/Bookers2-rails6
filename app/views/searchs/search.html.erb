<% if @model == 'user' %>
<h3>【Usersモデルの検索結果】検索ワード：<%= @value %></h3>
<table class="table">
  <thead>
    <tr>
      <th>name</th>
    </tr>
  </thead>
  <tbody>
    <% @datas.each do |user| %>
      <%= link_to user_path(user) do %>
        <tr>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<% elsif @model == 'book' %>
  <h3>【Postsモデルの検索結果】検索ワード：<%= @value %></h3>
    <table class="table">
    <thead>
        <tr>
            <th></th>
            <th>タイトル</th>
            <th>本文</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <% @datas.each do |book| %>
      <tr>
        <td><%= book.user.name %></td>
        <td>
          <%= link_to book_path(book) do %>
            <%= book.title %>
          <% end %>
          </td>
        <td><%= book.body %></td>
        <td><%= link_to "詳細", book_path(book) %></td>
        <% if book.user == current_user %>
          <td><%= link_to "編集", edit_book_path(book) %></td>
          <td><%= link_to "削除", book_path(book), method: :delete %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
</table>
<% end %>
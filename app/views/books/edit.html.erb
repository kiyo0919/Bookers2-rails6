
<h1>Editing Book</h1>
 <%= render 'layouts/error', model: @book %>
<%= form_with model: @book, url:book_path(@book), local:true do |f| %>
  <p>Title</p>
  <%= f.text_area :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>

  <%= link_to "Show", book_path(@book) %>
  <%= link_to "Back", books_path %>


<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/userinfo', user: @user, book: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user) do %>
                 <%= image_tag @book.user.get_profile_image("50x50") %>
                <% end %>
                <br>
                  <%= link_to user_path(@user.id) do %>
                    <%= @user.name %>
                  <% end %>
              </td>
              <td>
                <%= link_to @book.title, book_path(@book.id) %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <td class="table_favorites<%= @book.id%>">
                <%= render "favorites/favorite", book: @book %>
              </td>
              <td>
                <% if @user == current_user %>
                  <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
                <% end %>
              </td>
              <td>
                <% if @user == current_user %>
                  <%= link_to "Destroy", book_path(@book.id), method: :delete,'data-confirm' => "本当に消しますか？", class: "btn btn-sm btn-danger" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>

        <div class="comments">
          <table class="table table-hover table-inverse">
            <tbody>
              <% @book.book_comments.each do |book_comment| %>
                <tr>
                  <td>
                    <%= image_tag book_comment.user.get_profile_image("50x50") %>
                    <br>
                    <%= book_comment.user.name %>
                  </td>
                  <td>
                    <%= book_comment.comment %>
                  </td>
                  <td>
                    <% if book_comment.user == current_user %>
                      <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete,'data-confirm' => "本当に消しますか？", class: "btn btn-sm btn-danger" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          
          
          
        </div>
        <div class="new-comment">
          <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment, placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
          <% end %>
        </div>
      </div>
    </div>
</div>

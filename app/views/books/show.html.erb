
<%#@book.userでuserの情報を持ってこれる %>

<h1>User info</h1>
<%= image_tag @book.user.get_profile_image %>
<%= @book.user.name %>
<%= @book.user.introduction %>


<h1>New book</h1>
<%= form_with model:@book_new, local:true do |f| %>
  <p>title</p>
  <%= f.text_field :title %>
  <p>opinion</p>
  <%= f.text_area :opinion %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Book detail</h1>
<%= @book.user.name %>
<p><%= @book.title %></p>
<p><%= @book.body %></p>

<% if @book.user == current_user %>
  <%= link_to "Edit", edit_book_path(@book.id) %>
  <%= link_to "Delete", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% end %>

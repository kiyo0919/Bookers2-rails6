<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/userinfo', user: @user, book: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <%= render 'searchs/form' %>
        <div class="book_detail">
          <%= render "books/detail", book: @book, user: @user %>
        </div>

        <div class="col-md-6">
          <div class="table_comments">
            <%= render "book_comments/comments", book: @book %>
          </div>
          <div class="new-comment mt-3">
            <%= form_with(model:[@book, @book_comment], local: false ) do |f| %>
            <%= f.text_area :comment, placeholder: "コメントをここに" %>
            <%= f.submit "送信する" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>
